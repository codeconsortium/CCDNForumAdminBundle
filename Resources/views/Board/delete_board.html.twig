{% extends param('ccdn_forum_admin.board.layout_templates.delete_board') %}

{% block stylesheets %}
	{{ parent() }}
	<link href="{{ asset('bundles/ccdncomponentcrumbtrail/css/crumbs.css') }}" rel="stylesheet" type="text/css">
{% endblock %}

{% block title %}{{ 'title.board.delete'| trans({'%board_name%': board.name}, 'CCDNForumAdminBundle') }}{% endblock %}

{% block sidebar %}
	{{ parent() }}

{% endblock %}

{% block body %}

{% include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' %}

<div class="section_wrap_top">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>
<div class="section_wrap_bottom">
	<div class="section_header">
		<h2>{{ 'title.board.delete'| trans({'%board_name%': board.name}, 'CCDNForumAdminBundle') }}</h2>
	</div>
</div>

<div class="section_wrap_standalone">	
	<div class="section_panel h_align_centre v_align_middle">
			<br>
			{{ 'board.delete.confirmation_question' | trans({'%board_name%': board.name }, 'CCDNForumAdminBundle') }}
			<br><br><br>
			<a class="button_red" href="{{ path('cc_admin_forum_board_delete_confirmed', {'board_id': board.id })}}">{{ 'delete.confirm_yes' | trans({}, 'CCDNForumAdminBundle') }}</a>
			&nbsp;&nbsp;&nbsp;
			<a class="button_red" href="{{ path('cc_admin_forum_category_index')}}">{{ 'delete.confirm_no' | trans({}, 'CCDNForumAdminBundle') }}</a>
	</div>
</div>

<div class="section_wrap_standalone">
	{% include 'CCDNComponentCrumbTrailBundle:Trail:trail.html.twig' with {'crumbs': crumbs } %}
</div>

{% endblock %}