{% extends 'CCDNForumAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_admin.category.edit.layout_template %}

{% block title %}{{- truncDot('ccdn_forum_admin.title.category.edit' | trans({'%category_name%': category.name}, 'CCDNForumAdminBundle'), ccdn_forum_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	<section>
		{%- form_theme form ccdn_forum_admin.category.edit.form_theme -%}
		<form action="{{- path('ccdn_forum_admin_category_edit', {'categoryId': category.id}) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal">
			<fieldset>

				<div class="control-group form-title">
					<div class="controls">
						<h3>{{- 'ccdn_forum_admin.title.category.edit' | trans({'%category_name%': category.name}, 'CCDNForumAdminBundle') -}}</h3>
					</div>
				</div>
			
				{{- form_errors(form) -}}

				{{- form_widget(form) -}}
			
				<div class="form-actions">
					<input type="submit" class="btn btn-primary" value="{{- 'ccdn_forum_admin.form.button.category.edit' | trans({}, 'CCDNForumAdminBundle') -}}">
				
					<a class="btn" href="{{- path('ccdn_forum_admin_category_index') -}}">
						{{- 'ccdn_forum_admin.form.button.cancel' |trans({}, 'CCDNForumAdminBundle') -}}
					</a>
				</div>

			</fieldset>
		</form>
	</section>
	
	{%- endspaceless -%}

{% endblock body_content %}
