{% extends 'CCDNForumAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_admin.category.index.layout_template %}

{% block title %}{{- truncDot('ccdn_forum_admin.title.category' | trans({}, 'CCDNForumAdminBundle'), ccdn_forum_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- for category in categories -%}
		{%- include "CCDNForumAdminBundle:Category:item_category.html.twig" -%}
	{%- else -%}
		<div class="well center">
			{{- 'categories.empty' | trans({}, 'CCDNForumForumBundle') -}}
		</div>
	{%- endfor -%}

	{%- endspaceless -%}

{% endblock body_content %}
