{%- spaceless -%}

	<header class="clearfix">
		<div class="span6">
			<h3>
				<a href="{{- path('ccdn_forum_forum_category_show', {'categoryId': category.id }) -}}">
					{{- category.name -}}
				</a>
			</h3>
		</div>
		<div class="span6 btn-right">
			<a class="btn btn-danger btn-mini" href="{{- path('ccdn_forum_admin_category_edit', {'categoryId': category.getId }) -}}">
				{{- 'link.category.edit' | trans({}, 'CCDNForumAdminBundle') -}}
			</a>
			
			<a class="btn btn-danger btn-mini" href="{{- path('ccdn_forum_admin_category_delete', {'categoryId': category.getId }) -}}">
				{{- 'link.category.delete' | trans({}, 'CCDNForumAdminBundle') -}}
			</a>
			
			<a class="btn btn-danger btn-mini" href="{{- path('ccdn_forum_admin_board_create_on_category', {'categoryId': category.getId }) -}}">
				{{- 'link.board.add' | trans({}, 'CCDNForumAdminBundle') -}}
			</a>
			
			<a class="btn btn-danger btn-mini" href="{{- path('ccdn_forum_admin_category_priority_move_up', {'categoryId': category.getId }) -}}">
				{{- 'link.item.move_up' | trans({}, 'CCDNForumAdminBundle') -}}
			</a>
			
			<a class="btn btn-danger btn-mini" href="{{- path('ccdn_forum_admin_category_priority_move_down', {'categoryId': category.getId }) -}}">
				{{- 'link.item.move_down' | trans({}, 'CCDNForumAdminBundle') -}}
			</a>
		</div>
	</header>

	<section>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th class="center" style="width:34px;"></th>
					<th class="left">{{- 'generic.thead.board' | trans({}, 'CCDNForumAdminBundle') -}}</th>
					<th class="center" style="width: 80px;">{{- 'generic.thead.topics' | trans({}, 'CCDNForumAdminBundle') -}}</th>
					<th class="center" style="width: 80px;">{{- 'generic.thead.posts' | trans({}, 'CCDNForumAdminBundle') -}}</th>
					<th class="center" style="width: 170px;">{{- 'generic.last_post' | trans({}, 'CCDNForumAdminBundle') -}}</th>
				</tr>
			</thead>
			<tbody>
				{%- for row, board in category.boards -%}
					{%- include "CCDNForumAdminBundle:Category:item_board.html.twig" -%}
				{%- else -%}
					<tr>
						<td class="center" colspan="5">
							{{- 'category.boards.none' | trans({}, 'CCDNForumForumBundle') -}}
						</td>
					</tr>
				{%- endfor -%}
			</tbody>
		</table>
	</section>

{%- endspaceless -%}
