{% extends 'CCDNForumAdminBundle::base.html.twig' %}

{% set LayoutTemplate = ccdn_forum_admin.topic.change_board.layout_template %}

{% block title %}{{- truncDot('ccdn_forum_admin.title.topic.change_board' | trans({'%topic_title%': topic.getTitle }, 'CCDNForumAdminBundle'), ccdn_forum_admin.seo.title_length) -}}{% endblock %}


{% block body_content %}

	{%- spaceless -%}

	{%- include 'CCDNComponentCommonBundle:Flashes:flashes.html.twig' -%}

	{%- form_theme form ccdn_forum_admin.topic.change_board.form_theme -%}
	<form action="{{- path('ccdn_forum_admin_topic_change_board', { 'topicId': topic.getId} ) -}}" method="post" {{ form_enctype(form) }} class="form-horizontal">
		<fieldset>

			<div class="control-group form-title">
				<div class="controls">
					<h3>{{- 'ccdn_forum_admin.title.topic.change_board' | trans({'%topic_title%': topic.getTitle }, 'CCDNForumAdminBundle') -}}</h3>
				</div>
			</div>

			{{- form_errors(form) -}}

			{{- form_widget(form) -}}
			
			<div class="form-actions">
				<input type="submit" class="btn btn-danger" value="{{- 'ccdn_forum_admin.form.button.topic.move_to_board' | trans({}, 'CCDNForumAdminBundle') -}}">
				
				<a class="btn" href="{{- path('ccdn_forum_forum_topic_show', {'topicId': topic.id}) -}}">
					{{- 'ccdn_forum_admin.form.button.cancel' |trans({}, 'CCDNForumAdminBundle') -}}
				</a>
			</div>

		</fieldset>
	</form>

	{%- endspaceless -%}

{% endblock body_content %}
